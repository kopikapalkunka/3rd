# Auth Domain (looks like: your-project-name.firebaseapp.com)
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-name.firebaseapp.com

# Project ID (your project name)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-name

# Storage Bucket (looks like: your-project-name.appspot.com)
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-name.appspot.com

# Messaging Sender ID (looks like: 123456789012)
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id-here

# App ID (looks like: 1:123456789012:web:abcdefghijklmnop)
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id-here

